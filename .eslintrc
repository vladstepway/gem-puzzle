{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb-base", "prettier"
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "ignorePatterns": ["dist", "node_modules"],
  "rules": {
    "max-len": [1, 120, 2, {
      "ignoreComments": true
    }],
    "allowForLoopAfterthoughts": true
  }
}