{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb-base", "prettier"
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "ignorePatterns": ["dist", "node_modules"],
  "rules": {
    "max-len": [1, 120, 2, {
      "ignoreComments": true
    }],
    "no-plusplus": ["error", {
      "allowForLoopAfterthoughts": true
    }],
    "no-restricted-syntax": ["error", "BinaryExpression[operator='in']"],
    "no-param-reassign": [2, {
      "props": false
    }],
    "class-methods-use-this": 0,
    "no-unused-vars": ["error", {
      "args": "none"
    }]
  }
}